/**
 * 全局样式
 */

/* 全局容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 通用按钮样式 */
.btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-primary:active {
  background-color: #06ad56;
}

.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #07c160;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 文本样式 */
.text-primary {
  color: #07c160;
}

.text-secondary {
  color: #999;
}

.text-center {
  text-align: center;
}

.text-error {
  color: #fa5151;
}

/* 间距 */
.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mt-large {
  margin-top: 48rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}

