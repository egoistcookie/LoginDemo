<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logindemo.mapper.UserMapper">
    
    <select id="findByUsername" resultType="com.logindemo.model.User">
        SELECT * FROM users WHERE username = #{username}
    </select>
    
    <select id="findByEmail" resultType="com.logindemo.model.User">
        SELECT * FROM users WHERE email = #{email}
    </select>
    
    <select id="findByPhone" parameterType="String" resultType="com.logindemo.model.User">
        SELECT * FROM users WHERE phone = #{phone}
    </select>
    
    <select id="selectRoleIdsByUsername" parameterType="String" resultType="Long">
        SELECT ur.role_id FROM users u
        JOIN user_roles ur ON u.id = ur.user_id
        WHERE u.username = #{username}
    </select>
</mapper>